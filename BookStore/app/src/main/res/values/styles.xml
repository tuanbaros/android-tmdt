<resources xmlns:name="http://schemas.android.com/tools">



    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="AppTheme.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextBookName"  parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/colorBookName</item>
        <item name="android:maxLines">3</item>
    </style>
    <style name="TextBookAuthor"  parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/colorBookAuthor</item>
    </style>

    <style name="StylePrice" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/colorPrice</item>
    </style>
    <style name="StyleOldPrice" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/colorOldPrice</item>
    </style>
    <style name="StyleTitleSell" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorBookName</item>
    </style>
    <style name="primaryBt" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/cardview_light_background</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="marginNormal"  parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/colorBookAuthor</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstar24</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

</resources>
