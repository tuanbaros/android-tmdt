<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_marginTop="3dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imagebt_book_cart"
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_menu_camera"
                android:layout_margin="10dp"/>
            <Spinner
                android:id="@+id/spiner_quantity_book"
                android:layout_marginBottom="10dp"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/text_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="book's name"
                android:textSize="18dp"
                android:maxLines="3"
                android:textColor="@color/colorName"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text_author_book"
                android:layout_width="wrap_content"
                android:textSize="10dp"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:text="by Author's book"/>
            <TextView
                android:id="@+id/text_price_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500000 đ"
                android:textColor="@color/colorPrice"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/text_old_price_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000000 đ"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/bt_delete_book_cart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="REmove"
                android:textColor="@color/cardview_light_background"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="10dp"
               />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>