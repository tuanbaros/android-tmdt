<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/colorWhile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart total ("
                android:elevation="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                android:shadowRadius="5"/>
            <TextView
                android:id="@+id/textview_count_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:elevation="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                android:shadowRadius="5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" items):"
                android:elevation="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                android:shadowRadius="5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textview_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 $"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:shadowRadius="5"/>
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_buy_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="BUY"
            android:textSize="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:elevation="@dimen/cardview_default_radius"
            android:background="@color/colorYellow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/cardview_dark_background"
            android:shadowRadius="5"
            android:text="Book in my cart:"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:background="@color/colorOldPrice"
        android:id="@+id/recycleview_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/cardview_dark_background"
        android:shadowRadius="5"
        android:text="Buy more ..."
        android:layout_margin="10dp"/>
        <bookstore.android.com.bookstore.adapters.ListBookHorizontalScrollView
            android:id="@+id/horizontal_buy_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </bookstore.android.com.bookstore.adapters.ListBookHorizontalScrollView>
    </LinearLayout>
</ScrollView>