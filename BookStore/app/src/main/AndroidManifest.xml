<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bookstore.android.com.bookstore">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/AppTheme.Theme"
            android:label="@string/cart_name"
            android:name=".activities.CartActivity">
        </activity>
        <activity
            android:name=".activities.SellActivity">
        </activity>
        <activity
            android:theme="@style/AppTheme.Theme"
            android:name=".activities.RateActivity">
        </activity>
        <activity
            android:theme="@style/AppTheme.Theme"
            android:label="Bill Status"
            android:name=".activities.BillActivity">
        </activity>
        <activity
            android:theme="@style/AppTheme.Theme"
            android:label="Bill Details"
            android:name=".activities.DetailsBillActivity">
        </activity>
    </application>

</manifest>